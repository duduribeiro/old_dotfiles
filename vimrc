syntax on
set t_Co=256

" tab with 2 spaces
:set tabstop=2
:set shiftwidth=2
:set expandtab

" Do not create swapfile
:set noswapfile

:set ruler
:set number

" disable arrow keys
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>

" Colorize the column 120
set colorcolumn=120
